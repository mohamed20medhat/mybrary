<h2 class="page-header">Edit Book</h2>
<!--we no longer need to use multer or multipart form in the form here. cause it will be sent as a string representation of the image due to filepond-->
<form action="/books/<%= book.id  %>?_method=PUT" method="post">
    <%- include('_form_fields') %>

    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger"  href="/books">Cancel</a>
        <button class="btn btn-primary"  type="submit">Update</button>
    </div>
</form>
